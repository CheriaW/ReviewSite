@model IEnumerable<ReviewSiteREDO.Models.Review>

@{ ViewBag.Title = "Available Safe Havens";}

<h2>Available Safe Haven</h2>

<p>
    <div class="mobile" role="alert">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
    @Html.ActionLink("Add a Safe Haven", "Create")
        </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSafe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HasMedicine)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsSafe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasMedicine)
        </td>
        <td>
            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
            </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </div>
        </td>
    </tr>
}

</table>
